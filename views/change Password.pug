extends layouts/main


block content
    .form-container 
        form(action=routes.changePassword, method="post")
            input(type="text", name="current-password", placeholder="Current Password")
            input(type="text", name="new-password", placeholder="New Password")
            input(type="text", name="verify-password", placeholder="Verify New Password")
            input(type="submit", value="Change Password")